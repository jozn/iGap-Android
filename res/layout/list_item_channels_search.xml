<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:layoutDirection="ltr"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_first_channel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:background="@color/white"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10" >

        <com.iGap.customviews.RoundImageViewWhite
            android:id="@+id/img_avatar_channel"
            android:layout_width="@dimen/pic_icon"
            android:layout_height="@dimen/pic_icon"
            android:layout_gravity="bottom"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight=".9" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:gravity="bottom"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txt_icon_channel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="left|center"
                            android:text="@string/fa_rss"
                            android:textAlignment="gravity"
                            android:textColor="@color/maingrey"
                            android:textSize="@dimen/xlarg_font" />

                        <TextView
                            android:id="@+id/txt_name_channel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:gravity="left|center"
                            android:text="Asghar Omreeii"
                            android:textAlignment="gravity"
                            android:textColor="@color/maingrey"
                            android:textSize="@dimen/header_font_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_description_channel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txt_members_channel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="left|center"
                            android:singleLine="true"
                            android:text="1052KB"
                            android:textAlignment="gravity"
                            android:textColor="@color/blacktransparent"
                            android:textSize="@dimen/small_font"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txt_desc_channel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:gravity="left|center"
                            android:text="@string/channel_description_en"
                            android:textAlignment="gravity"
                            android:textColor="@color/maingrey"
                            android:textSize="@dimen/small_font"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_a"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>