<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:background="@color/light_green"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/wb_btn_menu"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_margin="5dp"
                android:background="@null"
                android:gravity="center"
                android:text="@string/fa_repeat"
                android:textColor="@color/white"
                android:textSize="@dimen/xlarg_font" />

            <Button
                android:id="@+id/wb_btn_share"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_margin="5dp"
                android:background="@null"
                android:gravity="center"
                android:text="@string/fa_share"
                android:textColor="@color/white"
                android:textSize="@dimen/xlarg_font" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/wb_txt_title_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Please Wait . . ."
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/wb_txt_link_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/wb_btn_close"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_margin="5dp"
                android:background="@null"
                android:gravity="center"
                android:text="@string/fa_remove"
                android:textColor="@color/white"
                android:textSize="@dimen/xlarg_font" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/wb_progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-4dp"
            android:backgroundTint="@color/yellow_color"
            android:visibility="visible" />
    </LinearLayout>

    <WebView
        android:id="@+id/wb_webView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>