<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:weightSum="12" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/dialog_register_box"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:weightSum="12" >

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/txt_choose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="bottom|center_horizontal"
                    android:text="@string/choose_your_profile_picture_en"
                    android:textAlignment="gravity"
                    android:textColor="@color/orang"
                    android:textSize="@dimen/larg_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_choose_gallery_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/fa_picture"
                    android:textAlignment="gravity"
                    android:textColor="@color/light_green"
                    android:textSize="@dimen/xxlarg_font" />

                <Button
                    android:id="@+id/btn_choose_gallery"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:text="@string/choose_from_gallery_en"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/maingrey"
                    android:textSize="@dimen/header_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_take_photo_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/fa_camera"
                    android:textAlignment="gravity"
                    android:textColor="@color/light_green"
                    android:textSize="@dimen/xxlarg_font" />

                <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:text="@string/take_aphoto_en"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/maingrey"
                    android:textSize="@dimen/header_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_use_avatar_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/fa_user"
                    android:textAlignment="gravity"
                    android:textColor="@color/light_green"
                    android:textSize="@dimen/xxlarg_font" />

                <Button
                    android:id="@+id/btn_use_avatar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:text="@string/use_avatar_en"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/maingrey"
                    android:textSize="@dimen/header_font_size" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <Button
                        android:id="@+id/btn_not_now"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:background="@color/red_normal"
                        android:gravity="center"
                        android:text="@string/not_now_en"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/header_font_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>