<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.iGap.customviews.SquareProgressView
        android:id="@+id/squareProgressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView" />

    <com.iGap.customviews.RoundImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/dp200"
        android:maxWidth="@dimen/dp200"
        android:minHeight="@dimen/dp100"
        android:minWidth="@dimen/dp100"
        android:scaleType="fitXY"
        android:src="@drawable/difaultimage" />

</RelativeLayout>