<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@color/light_green"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:weightSum="1" >

            <Button
                android:id="@+id/btn_back_ch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="top|center_horizontal"
                android:layoutDirection="ltr"
                android:text="@string/fa_angle_left"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="@dimen/drawer_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:gravity="bottom|center"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp20"
            android:weightSum="1" >

            <com.iGap.customviews.RoundImageViewWhite
                android:id="@+id/img_user_icon_ch"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:gravity="center_vertical"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.38"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="bottom"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/txt_group_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:gravity="bottom"
                    android:text="@string/group_en"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="@dimen/larg_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:layoutDirection="ltr" >

                <TextView
                    android:id="@+id/txt_user_group_member_ch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|bottom"
                    android:paddingBottom="@dimen/dp20"
                    android:text="@string/group_members_en"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_font" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:weightSum="1" >

            <Button
                android:id="@+id/btn_nav_ch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="top|center_horizontal"
                android:layoutDirection="ltr"
                android:text="@string/fa_navicon"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="@dimen/xlarg_font" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layoutDirection="ltr" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_layout"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:layoutDirection="ltr"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txt_group_link_ch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="left|center_vertical"
                            android:text="@string/group_link_en"
                            android:textAlignment="gravity"
                            android:textColor="@color/maingrey"
                            android:textSize="@dimen/header_font_size" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:background="@color/light_orang"
                    android:layoutDirection="ltr"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txt_group_des"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="left|center_vertical"
                            android:text="@string/group_description_en"
                            android:textAlignment="gravity"
                            android:textColor="@color/maingrey"
                            android:textSize="@dimen/header_font_size" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.60"
                    android:gravity="center"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:layoutDirection="ltr"
                        android:orientation="vertical"
                        android:weightSum="1" >

                        <LinearLayout
                            android:id="@+id/ll_addmembertogroup"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <TextView
                                android:id="@+id/txt_add_member_icon"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="0.1"
                                android:gravity="center_vertical|left"
                                android:text="@string/fa_plus"
                                android:textAlignment="gravity"
                                android:textColor="@color/orang"
                                android:textSize="@dimen/xlarg_font" />

                            <TextView
                                android:id="@+id/txt_add_member"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="5dp"
                                android:text="@string/add_member_en"
                                android:textAlignment="gravity"
                                android:textColor="@color/light_green"
                                android:textSize="@dimen/header_font_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <TextView
                                android:id="@+id/txt_bell_icon_ch"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:gravity="left|center_vertical"
                                android:text="@string/fa_bell"
                                android:textAlignment="gravity"
                                android:textColor="@color/orang"
                                android:textSize="@dimen/xlarg_font" />

                            <TextView
                                android:id="@+id/txt_notification_ch"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight=".85"
                                android:gravity="left|center_vertical"
                                android:layoutDirection="ltr"
                                android:text="@string/notification_sound_en"
                                android:textAlignment="gravity"
                                android:textColor="@color/light_green"
                                android:textSize="@dimen/header_font_size" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/switch_notification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@android:color/transparent"
                                android:gravity="right"
                                android:showText="true"
                                android:switchMinWidth="70dp"
                                android:textOff="OFF"
                                android:textOn="ON"
                                android:thumb="@drawable/switch_compact_thumb"
                                android:track="@drawable/switch_compat_track" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/gp_ll_shared_media"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <TextView
                                android:id="@+id/txt_puzzle_icon_ch"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:gravity="center_vertical|left"
                                android:text="@string/fa_puzzle"
                                android:textAlignment="gravity"
                                android:textColor="@color/orang"
                                android:textSize="@dimen/xlarg_font" />

                            <TextView
                                android:id="@+id/txt_shared"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical|left"
                                android:text="@string/shared_media_en"
                                android:textAlignment="gravity"
                                android:textColor="@color/light_green"
                                android:textSize="@dimen/header_font_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_leavegroup"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <TextView
                                android:id="@+id/txt_leave_icon_ch"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:gravity="center_vertical|left"
                                android:text="@string/fa_sign_out"
                                android:textAlignment="gravity"
                                android:textColor="@color/orang"
                                android:textSize="@dimen/xlarg_font" />

                            <TextView
                                android:id="@+id/txt_leave_group"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="5dp"
                                android:text="@string/leave_roup_en"
                                android:textAlignment="gravity"
                                android:textColor="@color/light_green"
                                android:textSize="@dimen/header_font_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:layoutDirection="ltr"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/txt_group_member"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="left|bottom"
                            android:text="@string/group_members_en"
                            android:textAlignment="gravity"
                            android:textColor="@color/orang"
                            android:textSize="@dimen/header_font_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/orang" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_kick_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@color/violet_light"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:visibility="gone" >

                <CheckBox
                    android:id="@+id/chk_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/dp10" />

                <TextView
                    android:id="@+id/textView_selected_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="@string/select_all_number_Of_selected_en"
                    android:textSize="@dimen/small_font" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/delete_btn_box"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:text="@string/kick_out_en"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_font" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>